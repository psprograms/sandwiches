<div class="container">
  <div class="hero-unit">
    <h1>Administrative Options</h1><br>
    <p><i>If you do not want to enforce a time constraint on orders, then enter "12:00 AM" in the Start Time field and "11:59 PM" in the End Time Field.</i></p>
    <form action='<%= url('/submit_options') %>' method="POST">
      <label for="maxOrders">Maximum Number of Orders Per Day</label>
      <input id="maxOrders" type="text" name="maxOrders" value="<%= @cmaxOrders.value %>"><br>
      <label for="startTime">Start Time</label>
      <input id="startTime" type="text" name="startTime" value="<%= @startSecTime[0] %>">
      <select id="startAMPM" name="startAMPM">
        <% if @startSecTime[1] == 'AM' %>
            <option value="AM" selected="selected">AM</option>
            <option value="PM">PM</option>
        <% else %>
            <option value="AM">AM</option>
            <option value="PM" selected="selected">PM</option>
        <% end %>
      </select><br>
      <label for="endTime">End Time</label>
      <input id="endTime" type="text" name="endTime" value="<%= @endSecTime[0] %>">
      <select id="endAMPM" name="endAMPM">
        <% if @endSecTime[1] == 'AM' %>
            <option value="AM" selected="selected">AM</option>
            <option value="PM">PM</option>
        <% else %>
            <option value="AM">AM</option>
            <option value="PM" selected="selected">PM</option>
        <% end %>
      </select><br><br>
      <input id="optionsSubmit" class="btn btn-primary" type="submit" name="optionsSubmit" value="Update">
    </form>
    <a href="<%= url("/lunch_console") %>"><button class="option btn" id="orders">Return to Lunch Dashboard</button></a>
  </div>
</div>
