<div class="container">
  <div class="hero-unit">
    <h1>Student Console</h1>
    <h3>Please login to the server before continuing.</h3>
    <div id="login">
      <% @choicePath = '/send_order' %>
      <form name="login" id="loginForm" action='<%= url('/make_choices') %>' method="POST">
        <fieldset>
          <h5>Username</h5>
          <input type="text" name="username">
          <h5>Password</h5>
          <input type="password" name="password">
          <br /><br />
          <button type="submit" class="btn">Submit</button>
        </fieldset>
      </form>
    </div>
  </div>
</div>